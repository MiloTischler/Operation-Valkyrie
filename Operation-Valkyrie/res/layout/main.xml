<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <!-- Camera Preview Panel begin -->        
    <valkyrie.ui.CameraPreviewDispatcher
        xmlns:valkyrie="http://schemas.android.com/apk/res/valkyrie.ui"
        android:id="@+id/cameraPreviewDispatcher"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" />
    
    <valkyrie.ui.CameraPreviewView
        xmlns:valkyrie="http://schemas.android.com/apk/res/valkyrie.ui"
        android:id="@+id/cameraPreviewView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" 
        android:contentDescription="@string/cameraPreviewViewDescription" />
    <!-- Camera Preview Panel End -->

    <!-- Filter Options Panel begin -->
    <valkyrie.widget.MultiDirectionSlidingDrawer
        xmlns:my="http://schemas.android.com/apk/res/valkyrie.main"
        android:id="@+id/filterOptionsPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/cameraPreviewView"
        android:orientation="horizontal" 
        my:direction="leftToRight"
        my:handle="@+id/filterOptionsHandle"
        my:content="@+id/filterOptionsContent">

        <ImageView
            android:id="@+id/filterOptionsHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/filterOptionsHandleDescription"
            android:src="@drawable/sliding_drawer_handle_left" />

        <!-- is 30% transparent (0xAA = 170) -->
        <valkyrie.ui.UpdateableRelativeLayout
            xmlns:valkyrie="http://schemas.android.com/apk/res/valkyrie.ui"
            android:id="@+id/filterOptionsContent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            style="@android:style/Theme.Translucent"
            android:background="#AA000000" 
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/optionsTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/options" />
        </valkyrie.ui.UpdateableRelativeLayout>
    </valkyrie.widget.MultiDirectionSlidingDrawer>
    <!-- Filter Options Panel End -->


    <!-- Action Bar Begin -->
    <!--
    Here should be a third Panel but I'm still trying to figure out how the action bar and the Options 
	Panel can have a semi-transparent background while overlapping the Camera Preview, because that way we 
	could maximize our preview which is nice imo.
    -->
    <!-- Action Bar End -->

</RelativeLayout>