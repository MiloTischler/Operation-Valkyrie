<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:stretchColumns="1" >

    <TableRow android:layout_width="fill_parent" >

        <TextView
            android:tag="name"
            android:text="OptionsName" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:tag="parent" >

        <SeekBar
            android:id="@+id/greyscale_option0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:tag="option0" />
    </TableRow>

    <TableRow android:layout_width="fill_parent" >

        <TextView
            android:tag="name"
            android:text="Option2" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:tag="parent" >

        <SeekBar
            android:id="@+id/greyscale_option1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:tag="option1" />
    </TableRow>

    <TableRow
        xmlns:valkyrie="http://schemas.android.com/apk/res/valkyrie.colorpicker"
        xmlns:binding="http://www.gueei.com/android-binding/"
        android:tag="parent" >

        <valkyrie.colorpicker.ColorPicker
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:background="#FFFFFF"
            android:padding="20dp"
            android:textSize="20dp"
            binding:text="FORMAT(&apos;Color Selected (integer): %s&apos;, Color)"
            binding:color="Color" 
            android:tag="option_name_x" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:tag="parent" >

        <ToggleButton
            android:tag="color_mode"
            android:textOff="Graustufen aktiviert"
            android:textOn="Farbe aktiviert" />
    </TableRow>

</TableLayout>