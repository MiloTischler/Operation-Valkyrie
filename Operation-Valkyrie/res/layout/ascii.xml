<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:stretchColumns="*" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp" >

        <TextView
            android:tag="name"
            android:text="Font Size" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:tag="parent" >

        <SeekBar
            android:id="@+id/ascii_option_fontsize"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:max="10"
            android:progress="3"
            android:tag="fontsize" />
    </TableRow>

    <TableRow
        xmlns:color="http://schemas.android.com/apk/res/valkyrie.grayscale"
        android:layout_marginTop="10dp"
        android:tag="parent" >

        <valkyrie.colorpicker.ColorPicker
            xmlns:my="http://schemas.android.com/apk/res/valkyrie.main"
            android:id="@+id/foregroundcolor"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_margin="10dp"
            android:background="#000000"
            android:tag="LOLMEINTAG"
            android:text="Foreground"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />

        <valkyrie.colorpicker.ColorPicker
            xmlns:my="http://schemas.android.com/apk/res/valkyrie.main"
            android:id="@+id/backgroundcolor"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:layout_margin="10dp"
            android:background="#000000"
            android:tag="LOLMEINTAG"
            android:text="Background"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:tag="parent" >

        <ToggleButton
            android:tag="color_mode"
            android:textOff="Graustufen aktiviert"
            android:textOn="Farbe aktiviert"
            android:checked="true" />
    </TableRow>

</TableLayout>